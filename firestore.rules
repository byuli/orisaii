rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 방(rooms) 컬렉션 규칙
    match /rooms/{roomId} {
      allow read, write: if true; // 개발 중에는 모든 접근 허용
    }
    
    // 결과(results) 컬렉션 규칙
    match /results/{resultId} {
      allow read, write: if true; // 개발 중에는 모든 접근 허용
    }
  }
} 